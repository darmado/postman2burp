{
  "name": "Get Device",
  "request": {
    "method": "GET",
    "header": [
      {
        "key": "X-API-Key",
        "value": "{{api_key}}",
        "type": "text"
      }
    ],
    "url": {
      "raw": "{{base_url}}/devices/{{deviceId}}",
      "host": [
        "{{base_url}}"
      ],
      "path": [
        "devices",
        "{{deviceId}}"
      ]
    },
    "description": "Get details of a specific device"
  }
}