{
  "name": "Get Issue",
  "request": {
    "method": "GET",
    "header": [
      {
        "key": "X-API-Key",
        "value": "{{api_key}}",
        "type": "text"
      }
    ],
    "url": {
      "raw": "{{base_url}}/appsec/issues/{{issueId}}",
      "host": [
        "{{base_url}}"
      ],
      "path": [
        "appsec",
        "issues",
        "{{issueId}}"
      ]
    },
    "description": "Get details of a specific AppSec issue"
  }
}